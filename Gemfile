source 'https://rubygems.org'

# Sinatra: Framework web ligero para manejar rutas y solicitudes HTTP
gem 'sinatra'
# Builder: Gem para construir respuestas XML de manera sencilla
gem 'builder'
# Rackup: Herramienta para configurar y ejecutar aplicaciones Rack
gem 'rackup'
# Puma: Servidor web concurrente para aplicaciones Ruby
gem 'puma'